<IfModule mod_rewrite.c>
    RewriteEngine On

    # Forzar HTTPS
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirigir al directorio public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
<Directory ~ "\.git">
    Order allow,deny
    Deny from all
</Directory>
<Files .env>
    Order allow,deny
    Deny from all
</Files>